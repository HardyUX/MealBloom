{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
        {
            "files": ["*.test.js", "*.test.jsx"],
            "env": {
                "jest": true
            }
        },
        {
            "files": ["cypress/**/*.js"],
            "env": {
                "cypress/globals": true
            },
            "plugins": ["cypress"]
        }
    ]
}